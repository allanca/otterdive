<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>Otterdive</servlet-name>
		<servlet-class>net.allancarroll.otterdive.OtterdiveServlet</servlet-class>
	</servlet>

    <servlet>
      <servlet-name>Upload</servlet-name>
      <servlet-class>net.allancarroll.otterdive.Upload</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>Serve</servlet-name>
      <servlet-class>net.allancarroll.otterdive.Serve</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>Upload</servlet-name>
      <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>Serve</servlet-name>
      <url-pattern>/serve</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
		<servlet-name>Otterdive</servlet-name>
		<url-pattern>/otterdive</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
